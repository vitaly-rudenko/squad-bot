{
  "name": "squad-bot",
  "version": "2.2.0",
  "description": "Telegram bot assistant for squads",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "npm run umzug db:migrate && node app.js",
    "start:dev": "npm run umzug db:migrate && nodemon --legacy-watch --ignore test/ app.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha --recursive test/unit",
    "test:unit:dev": "nodemon --delay 0.5 --exec 'npm run test:unit'",
    "test:integration": "mocha --recursive test/integration",
    "test:integration:dev": "nodemon --delay 1 --exec 'npm run test:integration'",
    "job:refresh-memberships": "node jobs/refresh-memberships.js",
    "umzug": "node ./umzug/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitaly-rudenko/squad-bot.git"
  },
  "author": "Vitaly Rudenko",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/vitaly-rudenko/squad-bot/issues"
  },
  "homepage": "https://github.com/vitaly-rudenko/squad-bot#readme",
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "chance": "^1.1.8",
    "common-tags": "^1.8.2",
    "deep-equal-in-any-order": "^1.1.15",
    "mocha": "^9.1.4",
    "node-fetch": "^3.2.0",
    "nodemon": "^2.0.15",
    "sinon": "^13.0.1",
    "unique-names-generator": "^4.7.1"
  },
  "dependencies": {
    "@vitalyrudenko/templater": "^1.0.0-pre.4",
    "dotenv": "^12.0.3",
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "googleapis": "^92.0.0",
    "ioredis": "^5.0.0-beta.4",
    "jsonwebtoken": "^8.5.1",
    "markdown-escapes": "^2.0.1",
    "multer": "^1.4.4",
    "pg": "^8.7.1",
    "pino": "^7.9.1",
    "pino-pretty": "^7.5.4",
    "telegraf": "^4.6.0",
    "umzug": "^3.0.0"
  }
}
