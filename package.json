{
  "name": "squad-bot",
  "version": "6.0.0",
  "description": "Telegram bot assistant for squads",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "npm run umzug db:migrate && node ./src/app.js",
    "dev": "npm run umzug db:migrate && nodemon --legacy-watch --ignore test/ ./src/app.js",
    "dev:https": "ENABLE_TEST_HTTPS=true npm run dev",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha --recursive test/unit",
    "test:unit:dev": "nodemon --delay 0.5 --exec 'npm run test:unit'",
    "test:integration": "mocha --recursive test/integration",
    "test:integration:dev": "nodemon --delay 1 --exec 'npm run test:integration'",
    "umzug": "node ./src/umzug/cli.js",
    "lint": "tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitaly-rudenko/squad-bot.git"
  },
  "author": "Vitaly Rudenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitaly-rudenko/squad-bot/issues"
  },
  "homepage": "https://github.com/vitaly-rudenko/squad-bot#readme",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/chai-subset": "^1.3.5",
    "@types/chance": "^1.1.6",
    "@types/common-tags": "^1.8.4",
    "@types/cors": "^2.8.17",
    "@types/deep-equal-in-any-order": "^1.0.3",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "@types/sinon": "^17.0.3",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "chance": "^1.1.8",
    "common-tags": "^1.8.2",
    "deep-equal-in-any-order": "^1.1.15",
    "mocha": "^9.1.4",
    "node-fetch": "^3.2.0",
    "nodemon": "^2.0.15",
    "sinon": "^13.0.1",
    "unique-names-generator": "^4.7.1"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^1.4.11",
    "@vitalyrudenko/dependency-registry": "^2.0.0-beta.2",
    "@vitalyrudenko/templater": "^1.0.0-pre.4",
    "cors": "^2.8.5",
    "dotenv": "^12.0.3",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "markdown-escapes": "^2.0.1",
    "multer": "^1.4.4",
    "nanoid": "^5.0.5",
    "nanoid-dictionary": "^5.0.0-beta.1",
    "pg": "^8.11.3",
    "pino": "^7.9.1",
    "pino-abstract-transport": "^1.1.0",
    "pino-pretty": "^7.5.4",
    "superstruct": "^1.0.3",
    "telegraf": "^4.15.3",
    "umzug": "^3.0.0"
  }
}
