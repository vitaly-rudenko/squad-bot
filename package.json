{
  "name": "squad-bot",
  "version": "1.3.0",
  "description": "Telegram bot assistant for squads",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "npm run db:migrate && node app.js",
    "debug": "npm run db:migrate && nodemon --ignore integration-test/ --legacy-watch app.js",
    "test": "mocha --recursive",
    "test:watch": "npm run test -- --watch --parallel",
    "test:watch:debug": "nodemon --delay 0.5 --exec 'npm run test'",
    "test:integration": "mocha --recursive integration-test",
    "test:integration:watch": "npm run test:integration -- --watch --parallel",
    "test:integration:watch:debug": "nodemon --delay 1 --exec 'npm run test:integration'",
    "db:reset": "npm run umzug db:migrate:undo:all && npm run db:migrate",
    "db:migrate": "npm run umzug db:migrate",
    "umzug": "node ./umzug/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitaly-rudenko/squad-bot.git"
  },
  "author": "Vitaly Rudenko",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/vitaly-rudenko/squad-bot/issues"
  },
  "homepage": "https://github.com/vitaly-rudenko/squad-bot#readme",
  "devDependencies": {
    "chai": "^4.3.4",
    "deep-equal-in-any-order": "^1.1.15",
    "mocha": "^9.1.4",
    "node-fetch": "^3.2.0",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "common-tags": "^1.8.2",
    "dotenv": "^12.0.3",
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "googleapis": "^92.0.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "telegraf": "^4.6.0",
    "umzug": "^3.0.0"
  }
}
