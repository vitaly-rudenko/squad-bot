{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.js", "src/**/*.ts", "test/unit/**/*.js", "index.d.ts"],
  "exclude": ["node_modules"]
}