{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["index.d.ts", "app.js", "env.js", "logger.js", "app/**/*.js"],
  "exclude": ["node_modules"]
}